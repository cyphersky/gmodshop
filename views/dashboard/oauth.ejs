<%- include("../partials/header", { user, title: "Home" }) %>
<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Dashboard - gmodshop</title>
      <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" integrity="sha384-1CmrxMRARb6aLqgBO7yyAxTOQE2AKb9GfXnEo760AUcUmFx3ibVJJAzGytlQcNXd" crossorigin="anonymous"></script>
      <script src="/site"></script>
   </head>
   <body>
      <main role="main" class="pb-3">
         <div class="container mt-5">
            <div class="row">
               <div class="col-md-3 side-col">
                  <ul class="side-list">
                     <li>
                        <p>Панель управления</p>
                     </li>
                     <li><a href="/dashboard">Главная</a></li>
                     <li><a href="/dashboard/settings">Настройки</a></li>
                     <li><a href="/support">Поддержка</a></li>
                     <li><a href="/dashboard/oauth">Привязать дискорд</a></li>
                     <li>
                        <p>Загрузки</p>
                     </li>
                     <li><a href="/dashboard/items">Мои аддоны</a></li>
                     <li><a href="/upload">Загрузить аддон</a></li>
                     <li><a href="/become-a-seller">Рекомендации продавца</a></li>
                     <li>
                        <p>Платежи</p>
                     </li>
                     <li><a href="/dashboard/downloads">Мои покупки</a></li>
                     <li><a href="/dashboard/payments">Выплаты</a></li>
                  </ul>
               </div>
               <div class="col-md-9 text-center">
                  <div class="sect">
                     <% if (discord != undefined) { %>
                     <h4>Oauth Results</h4>
                     <p class="text-success">Аккаунт <%= discord %> успешно подключен и синхронизирован</p>
                     <a href="/dashboard/settings" class="btn btn-primary">Настройки</a>
                     <% } else { %>
                     <h4 class="mb-5">Привяжи свой <span class="font-weight-bold">Discord</span> аккаунт к <span class="font-weight-bold">gmodshop.ru</span></h4>
                     <p>
                        <a href="https://discord.com/api/oauth2/authorize?client_id=836876088868995082&redirect_uri=https%3A%2F%2Fgmodshop.ru%2Fdashboard%2Foauth&response_type=code&scope=identify%20guilds.join" class="btn btn-lg btn-primary local" target="_blank">Привязать</a>
                     </p>
                     <p>
                        <a href="/dashboard">Вернуться</a>
                     </p>
                     <% } %>
                  </div>
               </div>
            </div>
         </div>
         <script src="/sitejs"></script>
      </main>
   </body>
</html>