   </head>
   <body>
      <main role="main" class="pb-3">
         <div class="addon-bg bg-blue-transparent no-bg-img" style="background-image: url()"></div>
         <div class="text-white">
            <div class="container pt-5">
               <div class="row mb-4">
                  <div class="col-md-3 search-side">
                     <h3 class="text-white"><span class="header-count"><%=count%></span><span class="small"> / Платных аддонов</span></h3>
                  </div>
                  <div class="col-md-9">
<!--                      <div class="form-group p-2">
                        <h1 class="search h3 text-white">Просмотр аддонов</h1>
                        <input type="text" class="form-control" id="search" placeholder="Введите ключевое слово для поиска.." value="" onkeyup="if (event.keyCode == 13) window.location.href = $('#searchbtn').attr('href'); return false;">
                        <div id="prog" style="width: 0%;"></div>
                     </div> -->
                     <div class="mt-3 form-search-filters">
                        <div class="form-group">
                        <h1 class="search h3 text-white">Просмотр аддонов</h1>
                        <input type="text" class="form-control" id="search" placeholder="Введите ключевое слово для поиска.." value="" onkeyup="if (event.keyCode == 13) window.location.href = $('#searchbtn').attr('href'); return false;">
                        <div id="prog" style="width: 0%;"></div>
                        </div>
                        <div class="form-group">
                           <label for="category">Фильтр по категориям</label>
                           <select class="form-control" id="category">
                              <option value="all">All</option>
                              <option value="1">Entites</option>
                              <option value="2">Weapons</option>
                              <option value="3">GUI</option>
                              <option value="4">Web</option>
                              <option value="5">Administration</option>
                              <option value="6">Gamemodes</option>
                              <option value="0">Other</option>
                           </select>
                        </div>
                        <div class="form-group">
                           <label for="gamemode">Фильтр по режиму</label>
                           <select class="form-control" id="gamemode">
                              <option value="all">All</option>
                              <option value="1">DarkRP</option>
                              <option value="2">TTT</option>
                              <option value="3">Sandbox</option>
                              <option value="4">ClockWork</option>
                              <option value="0">Other</option>
                           </select>
                        </div>
<!--                         <div class="form-group">
                           <label for="language">Language</label>
                           <select class="form-control" id="language" disabled="" readonly="">
                              <option value="1">English</option>
                           </select>
                        </div> -->
                        <div class="form-group w-100">
                           <a class="btn btn-purple d-none mw-100 w-100" id="searchbtn" href="/search?page=0&amp;category=all&amp;gamemode=all&amp;query=">Поиск</a>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
         <div class="pt-5">
            <div class="container">
               <div class="row mt-5">
                  <div class="col-12">
                     <div class="sect">
                        <h2 class="mb-3">Результаты поиска</h2>
                        <p id="params">Просмотр новых аддонов, страница <%=activepage%> </p>
                        <% addons.forEach(adn => {
                        if (adn.allow != 'accept') return
                        %>
                        <a href="/addon/<%=adn.id%>">
                           <div class="content-preview">
                              <div class="content-preview-info">
                                 <div class="content-preview-banner" style="background-image: url(<%=adn.img%>);">
                                    <div class="content-preview-opacity"></div>
                                 </div>
                                 <div class="content-preview-text">
                                    <div class="content-preview-title">
                                       <%= adn.name %>
                                    </div>
                                    <div class="content-preview-stats">
                                       <span>Addon</span>
                                       <span class="content-tag-parent">
                                       <span class="content-tags tag-premium tippy" ><%=adn.price%> ₽</span>
                                       <% if (adn.category == 1) { %>
                                       <span class="content-tags tag-entities">Entities</span>
                                       <% } else if (adn.category == 2) { %>
                                       <span class="content-tags tag-administration">Weapons</span>
                                       <% } else if (adn.category == 3) { %>
                                       <span class="content-tags tag-gui">GUI</span>
                                       <% } else if (adn.category == 4) { %>
                                       <span class="content-tags tag-web">Web</span>
                                       <% } else if (adn.category == 5) { %>
                                       <span class="content-tags tag-administration">Administration</span>
                                       <% } else if (adn.category == 6) { %>
                                       <span class="content-tags tag-gamemode">Gamemode</span>
                                       <% } %>
                                       <% if (adn.gamemodes == 1) { %>
                                       <span class="content-tags tag-administration">DarkRP</span>
                                       <% } else if (adn.gamemodes == 2) { %>
                                       <span class="content-tags tag-administration">TTT</span>
                                       <% } else if (adn.gamemodes == 3) { %>
                                       <span class="content-tags tag-administration">Sandbox</span>
                                       <% } else if (adn.gamemodes == 4) { %>
                                       <span class="content-tags tag-administration">ClockWork</span>
                                       <% } %>
<!--                                        <% if (adn.purchases > 0) { %>
                                       <span class="content-tags tag-reviews"><%=adn.purchases%> покупок</span>
                                       <% } %> -->
                                       <span class="content-tags tag-"></span>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </a>
                        <% }) %>
                        <div class="text-center mt-5 h5">
                        <% for (let i = 1; i < pages+1; i++) { %>
                           <a class="page-number " href="/search?page=<%=i%>&amp;category=all&amp;sort=new&amp;gamemode=all&amp;query="><%=i%></a>
                        <% } %>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <script>
            var sort = "new";
            var page = "1";
            var category = "all";
            var gamemode = "all";
            var query = "";
      
            $("#sort").val(sort);
            $("#category").val(category);
            $("#gamemode").val(gamemode);
      
            $('#sort').on('change', function () {
                sort = this.value
            });
            $('#category').on('change', function () {
                category = this.value
            });
            $('#gamemode').on('change', function () {
                gamemode = this.value
            });
            $('#search').on('keyup change', function () {
                query = this.value
                searchBtnUpdate()
            });
            $('select').on('change', function () {
                searchBtnUpdate()
            });
      
            function searchBtnUpdate() {
                var url = "/search?page=1&category=" + category + "&gamemode="+ gamemode + "&query=" + query
                $("#searchbtn").attr("href", url)
                $("#searchbtn").removeClass("d-none")
            }
         </script>
         </div>
      </main>
   </body>
</html>