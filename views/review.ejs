<%- include("partials/header", { user, title: "Home" }) %>
<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Product - gmodshop</title>
      <!-- <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css"> -->
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
      <script type="text/javascript" async="" src="https://www.google-analytics.com/analytics.js"></script>
      <script async="" src="https://www.googletagmanager.com/gtag/js?id=UA-112520490-5"></script>
      <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/css/bootstrap-select.min.css">
      <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
      <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
      <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
      <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.bundle.min.js" integrity="sha384-1CmrxMRARb6aLqgBO7yyAxTOQE2AKb9GfXnEo760AUcUmFx3ibVJJAzGytlQcNXd" crossorigin="anonymous"></script>
      <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.13.14/dist/js/bootstrap-select.min.js"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/ekko-lightbox/5.3.0/ekko-lightbox.min.js" integrity="sha512-Y2IiVZeaBwXG1wSV7f13plqlmFOx8MdjuHyYFVoYzhyRr3nH/NMDjTBSswijzADdNzMyWNetbLMfOpIPl6Cv9g==" crossorigin="anonymous"></script>
   </head>
   <% if (product) { %>
   <main role="main" class="pb-3">
      <div class="addon-bg" style="background-image: url(<%=product.img%>)"></div>
      <div class="container mt-5 mb-5">
         <div class="pt-3 mb-5 w-1 m-auto">
            <div class="text-white mb-4 text-shadow-1">
               <h1 class="display-4 mb-2 text-shadow-1"><%=product.name%></h1>
               <div class="profile-section">
                  <a href="/u/<%=seller.sid%>" class="text-white">
                    <div class="tiny-avatar mr-1" id="avatar_preview" style="background-image: url(http://cdn.gmodshop.ru/avatars/<%=product.seller%>.png)"> </div>
                    <h6 class="m-0 fade-hover"><%=seller.nickname%><span class="<%=seller.rank%>"><%=seller.rankname%></span></h6></h6>
                  </a>          
               </div>
               <p>
               </p>
            </div>
            <div class="mt-3 p-4 bg-section">
               <form method="post" class="form-upload mb-0 mt-0 mw-100 pt-4" form-url="/buy/<%=product.id%>" form-redirect="/buy/<%=product.id%>" form-fancy="5">
                  <% if (edited) { %>
                  <div class="alert alert-info">Вы редактируете предыдущий обзор для этого аддона.</div>
                  <% } %>
                  <div id="form-response"></div>
                  <div class="text-center mb-5">
                     <h2>Оставить отзыв</h2>
                  </div>
                  <div class="form-group mb-3">
                     <h6>Рекомендуете этот аддон?</h6>
                     <label><input type="radio" name="recommend" value="1"> Да</label><br>
                     <label><input type="radio" name="recommend" value="0"> Нет</label>
                  </div>
                  <div class="form-group mb-3">
                     <h6>Работает ли аддон?</h6>
                     <label><input type="radio" name="works" value="1"> Да</label><br>
                     <label><input type="radio" name="works" value="0"> Нет</label>
                  </div>
                  <div class="form-group mb-3">
                     <h6>Ваш отзыв</h6>
                     <textarea class="form-control" name="message" id="message" rows="6" placeholder="Ваш отзыв о аддоне"></textarea>
                  </div>
                  <button type="submit" class="btn btn-primary">Оставить отзыв</button>
               </form>
               <div class="text-center mt-2">
                  <a href="/addon/<%=product.id%>" class="a-arrow">вернуться назад</a>
               </div>
            </div>
            <script>
            <% if (edited) { %>
            $("input[name=recommend][value=<%=edited.status%>]").prop("checked", true);
            $("input[name=works][value=<%=edited.work%>]").prop("checked", true);
            $("#message").val("<%=edited.msg%>");
            <% } %>
            </script>
         </div>
      </div>
      <!-- <script src="/sitejs"></script> -->
   </main>
   <% } %>
</html>